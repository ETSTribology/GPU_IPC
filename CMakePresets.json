{
    "version": 6,
    "configurePresets": [
        {
            "name": "default",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": {
                    "type": "FILEPATH",
                    "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
                },
                "CMAKE_CXX_FLAGS": {
                    "type": "STRING",
                    "value": "/EHsc /bigobj /MP /permissive- /W4 /wd4324 /wd26812 /wd26495"
                },
                "CMAKE_BUILD_TYPE": {
                    "type": "STRING",
                    "value": "Release"
                },
                "CMAKE_CUDA_ARCHITECTURES": {
                    "type": "STRING",
                    "value": "60;70;75;80;86"
                }
            }
        }
    ]
}